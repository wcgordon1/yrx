---
// Layout
import DirectoryLayout from "@/layouts/DirectoryLayout.astro";
// Get  all posts from the "directory"  collection, which returns an unsorted array of post objects
import { getCollection } from "astro:content";
export async function getStaticPaths() {
  const directory = await getCollection("directory");
  const paths = directory.map((page) => {
    return {
      params: { slug: page.slug },
      props: { page },
      trailingSlash: false,
    };
  });
  return paths;
}
const { page } = Astro.props;
const { Content } = await page.render();

// Structured data array for CreativeWork and FAQ (if exists)
const structuredDataArray = [
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "name": `${page.data.title}: ${page.data.tagline}`,
    "description": page.data.description,
    "url": `https://yxr.io/directory/${page.slug}`,
    "author": {
      "@type": "Person",
      "name": "YXR",
      "url": "https://www.linkedin.com/company/yxr/"
    },
    "publisher": {
      "@type": "Organization",
      "name": "YXR",
      "url": "https://yxr.io"
    },
    "datePublished": "2025-07-29",
    "image": {
      "@type": "ImageObject",
      "url": `https://yxr.io${page.data.thumbnail?.url || page.data.logo?.url}`
    }
  }
];

// Add FAQ structured data if FAQs exist
if (page.data.faqs && page.data.faqs.length > 0) {
  structuredDataArray.push({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": page.data.faqs.map((faq: { question: string; answer: string }) => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer,
      },
    })),
  } as any);
}
---

<DirectoryLayout frontmatter={page.data} structuredData={structuredDataArray}>
  <Content />
</DirectoryLayout>
