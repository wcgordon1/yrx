---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];

import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/components/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="hero">
      <Text tag="h1" variant="displaySM" class="text-base-900 2xl:text-5xl">
        Explore, and discover new trends.
      </Text>
      <Text
        tag="p"
        variant="textMD"
        class="mt-4 text-base-500 text-balance 2xl:text-xl"
      >
        Here you will find all the tags used in our blog.
      </Text>
      <div class="flex flex-col prose-styles mt-12">
        {
          tags.map((tag) => (
            <Link
              title={tag}
              variant="link"
              aria-label={tag}
              href={`/blog/tags/${tag}`}
              class="text-accent-500      font-medium"
            >
              {tag}
            </Link>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
