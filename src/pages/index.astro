---
// Layout
import BaseLayout from "@/layouts/BaseLayout.astro";
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import SubscribeCta from "@/components/blog/SubscribeCta.astro";
import Hero from "@/components/landing/Hero.astro";
import BigCard from "@/components/directory/BigCard.astro";
import SmallCards from "@/components/directory/SmallCards.astro";
import SponsorCard from "@/components/directory/SponsorCard.astro";
import { getCollection } from "astro:content";
const allentries = await getCollection("directory");
---

<BaseLayout>
  <Hero />
  <section class="border-y border-base-200">
    <Wrapper variant="standard" class="py-6 lg:py-12">
      <div
        class="flex flex-col gap-4 lg:flex-row lg:justify-between"
      >
        <Text
          tag="h2"
          variant="textXS"
          class="font-medium uppercase text-base-500">Featured marketing examples</Text
        >
        <Text
          tag="a"
          href="/directory/home"
          aria-label="Your label"
          class="text-base-500 text-xs uppercase hover:text-accent-500 flex items-center gap-1 transition-all duration-200"
        >
          See all examples
          <svg
            xmlns="http://www.w.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-narrow-right"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M5 12l14 0"></path><path d="M15 16l4 -4"></path><path
              d="M15 8l4 4"></path></svg
          >
        </Text>
      </div>
      <div class="grid grid-cols-1 gap-2 md:grid-cols-2 xl:grid-cols-4 mt-4">
        {allentries.slice(0, 3).map((post) => <BigCard post={post} />)}
        <SponsorCard />
      </div>
    </Wrapper>
  </section>
  <section class="border-b border-base-200">
    <Wrapper variant="standard" class="py-6 lg:py-12">
      <div
        class="flex flex-col gap-4 lg:flex-row lg:justify-between"
      >
        <Text
          tag="h2"
          variant="textXS"
          class="font-medium uppercase text-base-500">Latest additions</Text
        >
      </div>
      <div class="grid grid-cols-1 gap-2 md:grid-cols-2 xl:grid-cols-4 mt-8">
        {allentries.slice(3, 7).map((post) => <SmallCards post={post} />)}
      </div>
    </Wrapper>
  </section>
  <SubscribeCta />
</BaseLayout>
