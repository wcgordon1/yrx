---
import { getCollection } from "astro:content";
const allProducts = await getCollection("store");
import BaseLayout from "@/layouts/BaseLayout.astro";
import StoreEntries from "@/components/store/StoreEntries.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="hero">
      <Text
        tag="h1"
        variant="displaySM"
        class="text-base-900 font-medium 2xl:text-5xl"
      >
        Digital products for your business
      </Text>
      <Text
        tag="p"
        variant="textMD"
        class="mt-4 text-base-500 text-balance 2xl:text-xl"
      >
        Shop my selection of digital products to help you grow your business,
        and to make your life easier and more productive
      </Text>
    </Wrapper>
  </section>
  <section>
    <Wrapper>
      <section>
        <Wrapper variant="wide" class="py-6">
          <Text tag="h2" variant="textLG" class="font-medium text-base-900"
            >Our products</Text
          >
          <div
            class="grid grid-cols-1 gap-4 md:grid-cols-2 xl:grid-cols-3 mt-8 group"
          >
            {
              allProducts.map((post) => (
                <StoreEntries
                  url={"/store/" + post.slug}
                  alt={post.data.title}
                  price={post.data.price}
                  title={post.data.title}
                  image={post.data.image.url}
                  description={post.data.description}
                />
              ))
            }
          </div>
        </Wrapper>
      </section>
    </Wrapper>
  </section>
</BaseLayout>
