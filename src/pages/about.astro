---
// Layout
import BaseLayout from "@/layouts/BaseLayout.astro";
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="heroNarrow">
      <Text
        tag="h1"
        variant="displaySM"
        class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
      >
        Reddit Marketing
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 text-base-700 text-balance 3xl:text-3xl"
      >
        Get to know yrx
      </Text>
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="narrow" class="py-6">
      <div class="flex flex-col gap-4 text-base-500">
        <Text tag="p" variant="textBase">
          White hat. Black hat. Both meaningless terms. We play to win. 
        </Text>
        <Text tag="p" variant="textBase">
          If you are not familiar with Reddit, please become so immediately. Since
          Google became involved, just about every search query routes back to a discussion on the platform. 
        </Text>
        <Text tag="p" variant="textBase">
          We have driven 10,000 new user signups in one week for a single client (SaaS). 
        </Text>
        <Text tag="p" variant="textBase">
          We took a chrome extension from 500 installs to 20,000 in a month. 
        </Text>
        <Text tag="p" variant="textBase">
          We go viral. We stay consistent. We draw attention to your offer. 
        </Text>
        <Text tag="p" variant="textBase">
          Click "Work with us" to schedule a call and see if we are a good fit. 
        </Text>


      </div>
      <div class="mt-24 text-right">
        <Text
          tag="p"
          variant="textBase"
          class="text-base-500 italic"
        >
          "Creativity thrives in collaboration. Thank you for being a part of our journey."
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="text-base-900 mt-2∏ font-semibold"
        >
          — Alex Johnson, CEO of Trendspotter
        </Text>
      </div>
      
    </Wrapper>
  </section>
</BaseLayout>
