  {
    title: "Overview",
    categories: [
      {
        name: "Main pages",
        links: [
          { href: "/", text: "Home" },
          { href: "/studio/home", text: "Studio" },
          { href: "/404", text: "Error 404" },
        ],
      },
      {
        name: "About",
        links: [
          { href: "/about/now", text: "Now" },
          { href: "/about/stack", text: "Stack" },
          { href: "/about/socials", text: "Socials" },
        ],
      },
      {
        name: "Forms",
        links: [
          { href: "/forms/reset", text: "Reset" },
          { href: "/forms/signin", text: "Sign in" },
          { href: "/forms/signup", text: "Sign up" },
          { href: "/forms/contact", text: "Contact" },
        ],
      },
      {
        name: "System",
        links: [
          { href: "/system/styleguide", text: "Style Guide" },
          {
            href: "https://lexingtonthemes.com/legal/license",
            text: "License",
          },
          {
            href: "https://lexingtonthemes.com/legal/support/",
            text: "Support",
          },
          {
            href: "https://lexingtonthemes.com/documentation/quick-start",
            text: "Documentation",
          },
        ],
      },
    ],
  },
  {
    title: "Content collections",
    categories: [
      {
        name: "Blog",
        links: [
          { href: "/blog/blog", text: "Blog home" },
          { href: "/blog/blog-two", text: "Blog home two" },
          { href: "/blog/blog-three", text: "Blog home three" },
          { href: "/posts/1", text: "Blog post" },
