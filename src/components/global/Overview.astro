---

<section>
  <div class="mx-auto max-w-3xl px-8 py-16">
    <p
      class="text-2xl font-medium tracking-tight text-base-900      sm:text-4xl">
      Overview
    </p>
    <p class="mt-4 text-base-500   ">
      Checkout all pages included on ProFolioX
    </p>
    <div class="border-y         py-12 mt-24 space-y-24">
      {
        sections.map((section) => (
          <div>
            <p class="text-lg font-semibold leading-6 text-base-900     ">
              {section.title}
            </p>
            <div class="mt-12 gap-y-12 gap-x-6 grid md:grid-cols-2 xl:grid-cols-4 ">
              {section.categories.map((category) => (
                <div class="flex flex-col gap-4">
                  <h3 class="text-lg font-semibold leading-6 text-base-900      group-hover:text-accent-500">
                    {category.name}
                  </h3>
                  <ul
                    role="list"
                    class="grid grid-cols-1 gap-2          lg:col-span-2">
                    {category.links.map((link) => (
                      <li>
                        <a
                          href={link.href}
                          class="flex items-center text-sm text-base-500 hover:text-accent-500      group duration-200">
                          {link.text}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
