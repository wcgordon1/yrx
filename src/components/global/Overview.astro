          { href: "/tags/astro", text: "Tag category" },
          { href: "/rss.xml", text: "RSS" },
        ],
      },
      {
        name: "Projects",
        links: [
          { href: "/projects/home", text: "Home" },
          { href: "/projects/1", text: "Details" },
