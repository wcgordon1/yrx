---
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/components/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import SubmitModal from "@/components/tools/SubmitModal.astro";
import Button from "@/components/fundations/components/Button.astro";
---

<section>
  <Wrapper variant="heroNarrow">
    <Text
      tag="h1"
      variant="displaySM"
      class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
    >
      Submit your tool to Trendspotter
    </Text>
    <Text
      tag="p"
      variant="textBase"
      class="mt-4 text-base-500 text-balance 2xl:text-xl"
    >
      Get your web tool noticed by top develpers and designers and increase
      their reach!
    </Text>
  </Wrapper>
</section>

<section>
  <Wrapper variant="narrow">
    <div class="prose-styles">
      <h4>Get your web tools featured</h4>
      <p>
        Submit your web tools for free and get them noticed by top designers.
        Every submission is carefully reviewed.
      </p>

      <h4>Submission process</h4>
      <p>
        It may take 2 or 3 years or more to publish your tool due to high
        demand, who knows. For $99 bucks, you can skip the wait and receive a
        review in 7 days, though publication is not guaranteed.
      </p>
      <div class="flex not-prose items-center gap-2">
        <div  x-data="{ open: false }">
          <!-- Trigger -->
          <span x-on:click="open = true">
            <Button
              size="sm"
              variant="default"
              title="#_"
              href="/submit"
              class="justify-center flex items-center gap-1"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-plus size-4"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M12 5l0 14"></path><path d="M5 12l14 0"></path></svg
              >
              Submit a tool
            </Button>
          </span>
          <!-- Modal -->
          <SubmitModal />
        </div>
        <Link
          size="sm"
          variant="muted"
          href="/pricing"
          title="#_"
          class="justify-center w-auto not-prose"
        >
          Skip the waiting line for $299
        </Link>
      </div>

      <h4>If not selected</h4>
      <p>Don’t give up—refine your tool and try again with future projects.</p>
    </div>
  </Wrapper>
</section>
