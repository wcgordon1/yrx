---
// Props for SEO
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title = "yxr.io - Viral Reddit Marketing",
  description = "We are a team of Reddit experts who help you grow your business faster.",
  image = "https://yoursite.com/og-image.jpg",
  canonical = "https://yxr.io"
} = Astro.props;

// Truncate description to 165 characters for optimal SEO
const truncatedDescription = description.length > 165 
  ? description.substring(0, 162) + "..." 
  : description;

const currentUrl = canonical || Astro.url.href;
---

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={currentUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={truncatedDescription} />
<meta property="og:image" content={image} />
<meta property="og:site_name" content="yxr.io" />
<meta property="og:locale" content="en_US" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={currentUrl} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={truncatedDescription} />
<meta property="twitter:image" content={image} />
<meta property="twitter:site" content="@yxrmarketing" />

<!-- Canonical URL -->
<link rel="canonical" href={currentUrl} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
