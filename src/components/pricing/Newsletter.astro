---
import Text from "../fundations/elements/Text.astro";
import Button from "../fundations/components/Button.astro";
---
<div class="flex flex-col h-full justify-between p-8 bg-base-50 rounded-3xl">
  <div>
    <div>
      <Text
        tag="p"
        variant="textLG"
        class="text-xl text-base-900 font-semibold uppercase"
      >
        Newsletter
      </Text>
      <Text tag="p" variant="textMD" class="mt-2 text-base-500">
        Promote your product on our newsletter.
      </Text>
    </div>
    <div class="mt-8">
      <Text
        variant="displaySM"
        class="font-semibold flex items-baseline text-base-900"
      >
        <Text
          tag="span"
          data-monthly="$229.00"
          data-annual="$219.00"
          x-text="$el.dataset[duration]"
        />
        <Text
          tag="span"
          class="text-sm font-normal tracking-normal font-sans text-base-500"
        >
          <Text tag="span" x-show="duration === 'monthly'">
            <Text tag="span" x-show="duration === 'monthly'"> /month</Text>
          </Text><span x-show="duration === 'annual'" style="display: none">
            /annually</span
          >
        </Text>
      </Text>
      <div class="w-full mt-4">
        <Button
          size="sm"
          variant="muted"
          class="w-full justify-center cursor-pointer"
        >
          Get Started
        </Button>
      </div>
      <div class="mt-8">
        <Text
          variant="textXS"
          class="text-base-900 font-mono uppercase tracking-wide font-medium"
        >
          includes:
        </Text>
        <ul
          class="flex flex-col text-sm mt-4 text-base-900 gap-y-3 font-medium"
          role="list"
        >
          <li class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-mail size-4"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
              ></path><path d="M3 7l9 6l9 -6"></path></svg
            >
            <Text tag="span">Top spot in our newsletter </Text>
          </li>
          <li class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-eye size-4"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path><path
                d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"
              ></path></svg
            >
            <Text tag="span">Visible on intro introduction </Text>
          </li>
          <li class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-repeat size-4"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 12v-3a3 3 0 0 1 3 -3h13m-3 -3l3 3l-3 3"></path><path
                d="M20 12v3a3 3 0 0 1 -3 3h-13m3 3l-3 -3l3 -3"></path></svg
            >
            <Text tag="span">Unlimited renewals</Text>
          </li>
          <li class="flex items-center gap-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-arrows-join size-4"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M3 7h5l3.5 5h9.5"></path><path d="M3 17h5l3.495 -5"
              ></path><path d="M18 15l3 -3l-3 -3"></path></svg
            >
            <Text tag="span">100k Subscribers</Text>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
